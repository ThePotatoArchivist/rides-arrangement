{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "rootDir": "src/",
        "moduleResolution": "nodenext",
        "outDir": "dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": false,
        "strict": true
    }
}
